import yaml


class MyEntityRepYaml(MyEntityRepBase):
    """Репозиторий для работы с YAML."""

    def load_data(self):
        """Загрузка данных из YAML файла."""
        try:
            with open(self.file_path, 'r', encoding='utf-8') as file:
                self.data = yaml.safe_load(file) or []
        except FileNotFoundError:
            self.data = []

    def save_data(self):
        """Сохранение данных в YAML файл."""
        with open(self.file_path, 'w', encoding='utf-8') as file:
            yaml.safe_dump(self.data, file, allow_unicode=True, sort_keys=False, default_flow_style=False)
